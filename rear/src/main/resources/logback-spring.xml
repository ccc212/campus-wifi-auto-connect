<configuration>
    <!-- 定义 RollingFileAppender -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 日志文件路径，由 application.yml 中指定 -->
        <file>${LOG_FILE}</file>

        <!-- 滚动策略，最多保留 5 个文件 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>application.%i.log</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>5</maxIndex>
        </rollingPolicy>

        <!-- 基于文件大小的触发策略 -->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1MB</maxFileSize> <!-- 每个日志文件最大 1MB -->
        </triggeringPolicy>

        <!-- 日志文件的格式 -->
        <encoder>
            <pattern>%d{MM-dd HH:mm:ss} %-5level %logger{10} : %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 设置 root logger 级别 -->
    <root level="INFO">
        <appender-ref ref="ROLLING"/>
    </root>
</configuration>
